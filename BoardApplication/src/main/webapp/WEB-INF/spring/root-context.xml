<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource">
		<property name="username" value="ace" />
		<property name="password" value="me" />
		<property name="jdbcUrl" value="jdbc:log4jdbc:oracle:thin:@localhost:1521/xepdb1" />
		<property name="driverClassName" value="net.sf.log4jdbc.DriverSpy" />
		<property name="maximumPoolSize" value="20" />
	</bean>
	
	<!-- MyBatis에서는 질의하기 위해서 JdbcTemplate 대신 SqlSession을 사용하는데,
	이 SqlSession을 생성하기 위해서 필요한 Bean이 SqlSessionFactoryBean이다. -->
	<!-- 요약 : MyBatis 환경에서 데이터베이스에 질의하기 위해서 사용되는 빈이다. -->
	<bean id="appSqlSession" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="typeAliasesPackage" value="com.kosa.app.dto" />
	</bean>
	
	<!-- MyBatis는 SqlSessionFactoryBean을 MapperFactoryBean에 주입해서 사용한다. -->
	<!-- MapperFactoryBean은 인터페이스로 만들어진 DAO의 구현체를 생성하는 역할을 수행한다. -->
	<bean id="aricleMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="appSqlSession" />
		<property name="mapperInterface" value="com.kosa.app.mapper.ArticleMapper" />
	</bean>
	
	<bean id="attachMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="appSqlSession" />
		<property name="mapperInterface" value="com.kosa.app.mapper.AttachMapper" />
	</bean>
	
	<bean id="replyMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="appSqlSession" />
		<property name="mapperInterface" value="com.kosa.app.mapper.ReplyMapper" />
	</bean>
</beans>
